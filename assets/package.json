  "scripts": {
    "deploy": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    
    "mjml": "npm run -s mjml-lost-password & npm run -s mjml-email-verification & npm run -s mjml-email-subscription-verification & npm run -s mjml-account-verified",
    "mjml-lost-password": "npx mjml --watch ./email_templates/lost_password.mjml -o ../lib/nfd_web/templates/email/lost_password.html.eex",
    "mjml-account-verified": "npx mjml --watch ./email_templates/account_verified.mjml -o ../lib/nfd_web/templates/email/account_verified.html.eex",
    "mjml-email-verification": "npx mjml --watch ./email_templates/email_verification.mjml -o ../lib/nfd_web/templates/email/email_verification.html.eex",
    "mjml-email-subscription-verification": "npx mjml --watch ./email_templates/email_subscription_verification.mjml -o ../lib/nfd_web/templates/email/email_subscription_verification.html.eex"
  },
  "dependencies": {
    "mjml": "^4.4.0-beta.1",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "copy-webpack-plugin": "^4.5.0",
    "css-loader": "^0.28.11",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^4.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "4.4.0",
    "webpack-cli": "^2.0.10"
  }
}
