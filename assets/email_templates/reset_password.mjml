<mjml>
  <mj-head>
    <mj-title>NeverFap Deluxe | Reset Password</mj-title>
  </mj-head>
  <mj-body>

    <!-- Intro text -->
    <mj-section background-color="#fafafa" padding-top="70px" padding-bottom="70px">
      <mj-column width="400px">
        <mj-text font-size="25px" line-height="35px" font-family="Helvetica Neue" padding-bottom="20px">
          Reset Password
        </mj-text>
        <mj-text line-height="20px">
          Please use the following link to reset your password.
        </mj-text>
        <mj-button 
          background-color="#F45E43"
          border-radius="0px"
          href="<%= @url %>">Reset Password</mj-button>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>

