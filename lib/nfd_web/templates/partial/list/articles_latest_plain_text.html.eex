<div class="index__container posts">
  <div class="articles__list">
    <%= Enum.map(@items, fn(item) -> %>
      <%= if Enum.find(item["tags"], &(&1 == @tag_type)) do %>
        <span><a class="link articles__link" href='<%= Routes.content_path(@conn, @page_symbol, item["slug"]) %>'><%= item["date"] %> | <%= item["title"] %></a></span>
      <% end %>
    <% end ) %>
  </div>
</div>
