<div class="index__container posts">
  <div class="articles__list">
    <%= Enum.map(@items, fn(item) -> %>
      <%= if Enum.find(item["categories"], &(&1 == @category_type)) do %>
        <%= if Enum.find(item["tags"], &(&1 == "practice")) do %>
          <span><a class="link articles__link" href='<%= Routes.content_path(@conn, :practice, item["slug"]) %>'><%= item["date"] %> | <%= item["title"] %></a></span>
        <% end %>
      <% end %>
    <% end ) %>
  </div>
</div>