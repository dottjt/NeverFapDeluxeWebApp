<%= $category := .category_type %>

<div class="index__container index__container--courses posts">
  <div class="articles__list">
    <%= range .page.Site.RegularPages %>
      <%= if in .Params.categories $category %>
        <%= if in .Params.tags "context" %>
          <span><a class="link articles__link" href="<%=.Permalink%>"><%=@item["date"]%> | <%=.Title%></a></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>